{
    "compilerOptions": {
        "target": "es2018",
        "module": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "dist",
        "baseUrl": "./src",
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "lib": [
            "es2018",
            "dom",
            "dom.iterable"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/*"
    ]
}